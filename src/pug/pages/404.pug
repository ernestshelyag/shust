extends ../template

block variables
    - var title = '404'
    - var bodyFlex = true

block content

    include ../layout/header

    +b.MAIN.err404(class=bodyFlex ? 'main-flex' : '')
        +e.SPAN.bg
        +e.DIV.cont
            +e.DIV.err
                span 4
                span 0
                span 4
            +e.H1.title Адрес страницы введен неверно
            +e.SPAN.text
                | Такой страницы не существует или неправильно набран адрес.
                br
                | начните с
                a(href="/") главной страницы
                | или воспользуйтсь поиском.

    include ../layout/footer
