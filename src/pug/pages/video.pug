                    +e.A.nav-link(href="#") Контакты
                +e.SPAN.enter#enter Войти
            +e.DIV.info-block
                +b.A.logo-block(href="/")
                    +icon("logo", "sprite")
                    +e.DIV.info
                        +e.SPAN.name Надежда Шуст
                        +e.SPAN.text Клинический психолог
                +b.DIV.layout-info
                    +e.UL.list
                        +e.LI.item
                            +e.DIV.link
