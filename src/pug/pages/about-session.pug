extends ../template

block variables
    - var title = 'about session'
    - var bodyFlex = false

block content

    +b.HEADER.header
        +b.DIV.header-top
            +e.DIV.nav-block
                +e.NAV.nav
                    +e.A.nav-link(href="price.html") Цены
                    +e.A.nav-link(href="about.html") Обо мне
                    +e.A.nav-link(href="review-page.html") Отзывы
                    +e.A.nav-link(href="#") Частые вопросы
                    +e.A.nav-link(href="articles-page.html") Полезные статьи
                    +e.A.nav-link(href="#") Студентам
                    +e.A.nav-link(href="#") Контакты
                +e.SPAN.enter#enter Войти
            +e.DIV.info-block
                +b.A.logo-block(href="/")
                    +icon("logo", "sprite")
                    +e.DIV.info
                        +e.SPAN.name Надежда Шуст
                        +e.SPAN.text Клинический психолог
                +b.DIV.layout-info
                    +e.UL.list
                        +e.LI.item
                            +e.DIV.link
                                +icon("mark", "sprite")
                                +e.DIV.text-block
                                    +e.SPAN.title Адрес:
                                    +e.SPAN.text г.Москва ул.Мясницкая, дом 30/1/2, строение 1
                        +e.LI.item
                            +e.A.link(href="#")
                                +icon("plane", "sprite")
                                +e.DIV.text-block
                                    +e.SPAN.title E-mail:
                                    +e.SPAN.text nadezhda@shust.me
                        +e.LI.item
                            +e.A.link(href="#")
                                +icon("skype", "sprite")
                                +e.DIV.text-block
                                    +e.SPAN.title Skype:
                                    +e.SPAN.text nadezhda.shust
                        +e.LI.item
                            +e.A.link(href="#")
                                +icon("phone", "sprite")
                                +e.DIV.text-block
                                    +e.SPAN.text_phone +7 (926)724-45-54
        +b.DIV.header-bottom
            +e.NAV.nav
                +e.A.link(href="session.html") Сеансы
                +e.A.link.active(href="about-session.html") Как проходят сеансы
                +e.A.link(href="hypnosis.html") Разновидности гипноза
                +e.A.link(href="video.html") Видео

    // header end

    +b.MAIN.about-session(class=bodyFlex ? 'main-flex' : '')

        // therapy-component

        +b.SECTION.therapy
            +e.DIV.cont
                +e.DIV.info-block.wrp
                    +e.DIV.text-block
                        +b.DIV.breadcrumbs
                            a(href="/") Главная
                            span /
                            a Как проходят сеансы
                        +e.H1.title Как проходят сеансы?
                        +e.UL.list
                            +e.LI.item Сеансы проводятся индивидуально и в группе (7–12 человек)
                            +e.LI.item Работа строится курсами по 12 сеансов
                            +e.LI.item Сеанс продолжается около 2 ч, (1,5 ч занимает работа в трансе)
                            +e.LI.item Содержание сеанса подбирается индивидуально
                            +e.LI.item В групповой работе учитывается разница в возможностях участников
                            +e.LI.item
                                | Сеансы выстраиваются , чтобы принести максимальную пользу
                                br
                                | всем пациентам

        // therapy-component-end

        include ../../components/callback/callback

        // person-component

        +b.SECTION.person
            +e.DIV.cont
                +e.DIV.info-block.wrp
                    +e.A.btn.btn-play
                    +e.DIV.text-block
                        +e.H1.title
                            | Что происходит
                            br
                            | на сеансах?
                        +e.P.text Работа в трансе открывает поистине безграничные возможности. Человек может побывать в таких ситуациях, которые сложно пережить в реальности — полет в космос, спуск в глубины океана, ритуальные пляски с настоящими дикарями, и даже в таких, в которые вовсе невозможно попасть вне транса — полет птеродактиля, погоня гепарда за косулей, путешествие в прошлое.

        // person-component-end

        +e.DIV.text-block
            +e.DIV.text-cont.wrp
                +e.P.text Для закрепления наработанных навыков саморегуляции индивидуальные сеансы идеально сочетать с групповыми занятиями. Более того, некоторых эффектов можно достичь, только работая в группе. В частности, сильно проявляется феномен эмоционального заражения и другие феномены групповой динамики. Полезно посмотреть, как ведут себя другие участники группы, увидеть, сколь широким может быть ассортимент способов реагирования в одних и тех же моделируемых ситуациях.
                +e.P.text В конце группового занятия участники делятся впечатлениями, обсуждают пережитое на сеансе. Часто бывает, что человек поначалу не помнит, что происходило на сеансе (или вовсе утверждает, что «просто уснул»), но в ходе обсуждения все вспоминает и убеждается, что действительно проделал масштабную работу.
                +e.P.text Бывает, что пациент воспринимает собственные образы, не связанные с предлагаемой ситуацией. Это очень хороший эффект, показывающий, что организм сам стремится пережить ситуации, которые необходимы для борьбы с недугом.

        include ../../components/format/format

    include ../layout/footer
