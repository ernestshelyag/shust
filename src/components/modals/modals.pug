// enter & reg modals

+b.DIV.modal.mfp-hide#enter-popup
    +e.FORM.form#form-enter
        +e.H1.title Войти
        input(type="hidden" name="hidden" value="enter-modal")
        +e.DIV.lev
            +e.INPUT.input_mail.form-inp(type="email" name="email" placeholder="e-mail")
        +e.DIV.lev
            +e.INPUT.input_pass.form-inp(type="password" name="password" placeholder="пароль")
        +e.BUTTON.button.form-btn(type="submit") Войти
        +e.A.reg(href="#reg-popup") Регистрация

+b.DIV.modal.mfp-hide#reg-popup
